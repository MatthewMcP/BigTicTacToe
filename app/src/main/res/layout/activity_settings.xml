<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".SettingsActivity">

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <fragment
            android:id="@+id/list"
            android:name="com.dev.mcp.matthew.bigtictactoe.Activities.MyPreferencesFragment"
            android:layout_width="match_parent"
            android:layout_height="800px"
            android:layout_weight="1" />

        <Button
            android:id="@+id/settings_resetStatistics_btn"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="@string/settings_resetStatisticsBtnTxt" />

        <Button
            android:id="@+id/settings_home_btn"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="@string/shared_homeBtnTxt" />


    </FrameLayout>
</FrameLayout>